.circle {
  width: 90rpx;
  height: 90rpx;
  border-radius: 20px;
  border: 8rpx solid #fff;
  margin-left: 100rpx;
  margin-top: 100rpx;
  text-align: center;
  background: linear-gradient(to top right, #2fa0d5, #41b4f4);
  color: #fff;
  box-shadow: 0 4px 0 #7da205;
  position: relative;
  font-size: 40rpx;
  line-height: 90rpx;
}

.circle .circle_lesson {
  width: 90rpx;
  height: 90rpx;
  border-radius: 18px;
  margin: 0 auto;
  background: linear-gradient(to top right, #2fa0d5, #41b4f4);
  margin-top: 6rpx;
  line-height: 90rpx;
}

.lock {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 50%;
  top: 80rpx;
  margin-left: -18rpx;
}

.lesson_star {
  width: 84rpx;
  height: 32rpx;
  border-radius: 50px;
  position: absolute;
  background-color: #fff;
  left: 50%;
  margin-left: -42rpx;
  top: 79rpx;
  box-shadow: 0 3px 0 #7da205;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.circle:nth-child(odd) {
  margin-left: 200rpx;
}

.bottom {
  position: fixed;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #f8f8f8;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  color: #9a9a9a;
  line-height: 100rpx;
  z-index: 999
}

