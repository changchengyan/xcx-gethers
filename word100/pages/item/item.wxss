  background-image: url(http://image.chubanyun.net/images/Word100/item-bg.jpg);
  background-size: 100% auto;
  background-repeat: repeat-y;
  padding-top: 40rpx;
  padding-bottom: 50rpx;
  min-height: 1115rpx
}

.lesson .circle:nth-child(1) {
  margin-left: 200rpx !important;
  margin-top: 0;
}

