.blue-bg {
  position: absolute;
  width: 100%;
  height: 660rpx;
  background: -webkit-linear-gradient(top, rgba(108, 183, 255, 1) 0%, rgba(70, 174, 232, 1) 100%);
  top: 0;
}

.all {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 43rpx 50rpx 40rpx 50rpx;
  text-align: center;
  width: 571rpx;
  height:827rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 auto;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.all_t {
  padding: 43rpx 0 0 0;
  margin-left: 30rpx;
  text-align: center;
  width: 571rpx;
  height: 827rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.new_add {
  font-size: 32rpx;
  color: #333;
}

.book_btn {
  position: absolute;
  width: 180rpx;
  height: 100%;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 0;
  z-index: 2;
}

.book {
  width: 450rpx;
  height: 240rpx;
  margin: 0 auto;
  margin-top: 38rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.book .book-info-num {
  color: #666;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.book .book-info-num .num {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  line-height: 20rpx;
 
}

.book .finish {
  font-size: 28rpx;
  color: #666;
    align-items: center;
  line-height: 20rpx;
}

.book .book-info-num .title {
  font-size: 24rpx;
  color: #999;
  margin-top: 7rpx;
}

.little-book .delete {
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  top: -33rpx;
  right: -33rpx;
  padding: 20rpx;
  background-color: transparent;
  z-index: 2
}
.book_img {
  position: relative;
  height: 100%;
}
.book_img .img {
  width: 180rpx;
  height: 100%;
}

.book-name {
  margin-top: 24rpx;
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}

.book-info {
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.pass-through {
  width: 300rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, rgba(39, 191, 255, 1) 0%, rgba(49, 155, 215, 1) 100%);
  margin: 0 auto;
}

.pass-through:active {
  transform: scale(0.8);
}

.my_book {
  font-size: 32rpx;
  color: #333;
}

.pk-review {
  width: 325rpx;
  margin: 53rpx auto 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.pk-review .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.PK {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/fuxi.png") no-repeat 50% 100%;
  background-size: 80%;
}

.PK:active {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/fuxi.png") no-repeat center 160%;
  background-size: 80%;
}

.review {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/pk_img.png") no-repeat center bottom;
  background-size: 80%;
}

.review:active {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/pk_img.png") no-repeat center 160%;
  background-size: 80%;
}

.bookshelf-add {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 48rpx;
  height: 600rpx;
  overflow: scroll;
  margin-bottom: 10rpx;
  padding: 17rpx 0 0 45rpx;
}

.little-book {
  width: 140rpx;
  height: 380rpx;
  position: relative;
  margin-right: 33rpx;
}

.little-book .img {
  width: 140rpx;
  height: 205rpx;
}

.little-book-name {
  color: #333;
  font-size: 20rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; */
  text-align: left;
}

.bookshelf-text {
  font-size: 24rpx;
  color: #333;
  line-height: 48rpx;
  width: 100%;
  margin-left:-23rpx;
}

.add-book {
  width: 502rpx;
  height: 84rpx;
  margin: 30rpx auto;
  text-align: center;
  line-height: 84rpx;
  font-size: 30rpx;
  color: #319bd7;
  border: 1px solid #319bd7;
  border-radius: 8rpx;
}

