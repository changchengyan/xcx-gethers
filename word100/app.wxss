/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.clear{
  clear: both;
}
.hidden{
  display: none;
}
.from-bottom{  
  opacity: 0;
  padding: 0;
  margin: 0;
  border-radius: 0;
  z-index: 99;
}
.clearfix:after {
  display: block;
  content: ".";
  height: 0;
  visibility: hidden;
  clear: both;
  font-size: 0;
  line-height: 0;
}
.clearfix {
  overflow: hidden;
}
.clearfix {
  zoom: 1;
}
/**loading**/
@import "/pages/component/loading/loading.wxss";
/* pay */
@import "/pages/component/pay/pay.wxss";
/*一排省略*/
.a_line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*两排省略*/
.two_line { 
    text-overflow:-o-ellipsis-lastline;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
/*遮罩  */
.mask {
  position: fixed;
  z-index: 1000;
  background:rgba(0,0,0,0.5);
  height: 100%;
  width: 100%;
  top:0;
  left:0;
}
/*横向flex布局*/
.flexRow{
	display: flex;
	display: -webkit-flex;
	flex-direction: row;
	justify-content:center;/*item在主轴上的对齐方式*/
	-webkit-justify-content: center;
	align-items:center;/*item在交叉轴上的对齐方式*/
	-webkit-align-items: center;
}
/*竖向flex布局*/
.flexColumn{
	display: flex;
	display: -webkit-flex; 
	flex-direction: column ;
	justify-content:center;/*item在主轴上的对齐方式*/
	-webkit-justify-content: center;
	align-items:center;/*item在交叉轴上的对齐方式*/
	-webkit-align-items: center;
}