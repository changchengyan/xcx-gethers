/*modal*/

.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
}

.modal .wrapper {
  background-color: #fff;
  /* border-radius: 34rpx; */
  width: 600rpx;
  min-height: 735rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: rgb(51, 51, 51);
  border-radius: 10rpx;
}

.del_txt {
  position: absolute;
  left: 50%;
  top: 10%;
  margin-left: -127rpx;
  color: #fff;
  font-weight: bold;
  font-size: 25px
}

.del {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  width: 29rpx;
}

.modal .wrapper .title {
  height: 140rpx;
  line-height: 140rpx;
  font-size: 35rpx;
  font-family: Microsoft YaHei;
  font-weight: 600;
}

.modal .wrapper .img {
  width: 100%;
  height: 220rpx;
}

.modal .wrapper .choose-bar {
  width: 503rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}

.modal .wrapper .choose-bar view {
  width: 45%;
  /* position: relative; */
  font-size: 28rpx;
  bottom: 0;
}

.modal .wrapper .choose-bar view.submit {
  color: #fff;
  font-family: Microsoft YaHei;
  background: url(http://image.chubanyun.net/images/Dictation/word/b_btn.png);
  background-size: 100% 100%;
  width: 503rpx;
  height: 104rpx;
  line-height: 104rpx;
  font-weight: bold;
  text-shadow: 0px 0px 10rpx #2e8b10;
}

.modal .wrapper .choose-bar view.cancel {
  height: 104rpx;
  line-height: 104rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  background: url(http://image.chubanyun.net/images/Dictation/word/y_btn.png);
  background-size: 100% 100%;
  width: 503rpx;
  margin-top: 20rpx;
  text-shadow: 0px 0px 10rpx #c97809;
}

