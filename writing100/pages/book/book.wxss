/* book.wxss */
@import "../template/template.wxss";

page {
  height: 100%;
  font-family: "微软雅黑";
}

view {
  box-sizing: border-box;
}

/* .wrap {
  padding-bottom: 118rpx;
} */
.bottom118{
  height: 118rpx;
}
/* .list-box {
  margin-top: 15rpx;
} */

.last {
  position: fixed;
  bottom: 30rpx;
}

.type_p {
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

.unit-bottom {
  width: 100%;
}

/*头部*/

.top-up {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  color: #333;
  padding-bottom: 10rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: url(http://image.chubanyun.net/images/writing/book/bottom.png)no-repeat;
  background-size: 100% 100%;
  /* height:196rpx; */
  height: 100rpx;
  transition: all 0.5s;
}


.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.publicKeyNum {
  font-size: 14px !important;
  padding: 8px 0;
  padding-right: 5px;
  flex: 1;
  color: #fff;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.publicKeyNum image {
  width: 31rpx;
  height: 38rpx;
}

.book-title {
  width: auto;
  padding: 8px 0;
  padding-left: 30rpx;
  flex-grow: 1;
  flex: 4;
  padding-right: 20rpx;
  color: #fff;
}

.top-botton-list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.top-button {
  width: 33%;
  height: 118rpx;
  font-size: 24rpx;
  /* color: #fff; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-top: -20rpx;
}

.top-button image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.top-button button {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
}

.proloadBg {
  width: 0;
  height: 0;
  background: url(http://image.chubanyun.net/images/Dictation/word/bg_submit2.png);
}

.share-button {
  width: 144rpx;
  height: 144rpx;
}

.share-button button {
  width: 144rpx;
  height: 144rpx;
  opacity: 0;
  position: absolute;
}

/*新设计的样式*/

/*横向flex布局*/

.flexRow {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: center; /*item在主轴上的对齐方式*/
  align-items: center; /*item在交叉轴上的对齐方式*/
}

/*竖向flex布局*/

.flexColumn {
  display: flex;
  flex-direction: column;
  justify-content: center; /*item在主轴上的对齐方式*/
  align-items: center; /*item在交叉轴上的对齐方式*/
}

.wrap {
  width: 100%;
  height: 100%;
}

.lei {
  position: relative;
  width: 100%;
  background: #eee;
  align-items: flex-start;
}

.rest_pen{
  position: absolute;
  top: 24rpx;
  right: 20rpx;
}
.rest_pen image{
  width: 33rpx;
  height: 44rpx;
}
.rest_pen text{
  font-size: 14px;
}

.lei .leiName {
  width: 33.33%;
  text-align: center;
  font-size: 16px;
  color: #666;
  padding: 24rpx 0 0;
}

.lei .active {
  color: #333;
}

.lei .active .bg {
  width: 33rpx;
  height: 8rpx;
  background: #06c1ae;
  border-radius: 10rpx;
  margin-top: 12rpx;
  margin-bottom: 10rpx;
}

.contain {
  width: 100%;
  height: calc(100% - 100rpx);
}

.contain scroll-view {
  height: 100%;
}

.contain swiper-item{
  background: url(http://image.chubanyun.net/images/writing/book/bg.png);
}

.contain scroll-view .item {
  padding: 18rpx 50rpx 0 50rpx;
  position:relative;
}

.item image{
  position: absolute;
  top: 80rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;

}
.lft {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}
.lesson-title {
  display: block;
  width: 100%;
}

.character_num{
  /* margin-left: 20rpx; */
  color: #a9a9a9;
}

.isWrote{
  width: 60rpx;
  height: 32rpx;
  margin-left: 20rpx;
  background-color: #6ec4ff;
  text-align: center;
  line-height: 32rpx;
  color: #fff;
  font-size: 10px;
  border-radius: 2px;
  display: inline-block;
  transform: translate(0,-6rpx);
}

.character_container{
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  padding:0 60rpx;
}

.character{
  padding: 0 4rpx;
  font-size: 20px;
  background: url(http://image.chubanyun.net/images/writing/book/xiaomi.png) no-repeat;
  background-size: 100%;
  background-position-y: 5rpx;
  box-sizing: border-box;
}
.pinyin{
  font-size: 12px;
}

.character-item{
  display: flex;
  flex-flow: nowrap column;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.contain scroll-view .item .head {
  padding: 0 13rpx;
  height: 54rpx;
  line-height: 54rpx;
  border: 1px solid #06c1ae;
  border-radius: 10rpx;
  display: inline-block;
  font-size: 18px;
  color: #333;
  margin-bottom: 28rpx;
}

.contain scroll-view .item .list {
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1px solid #eee;
}

.contain scroll-view .item .list .lft {
  font-size: 16px;
  color: #333;
  width: 60rpx;
  height: 60rpx;
}

.to-left {
  width: 60rpx;
  visibility: hidden;
}


.contain scroll-view .item .list .rgt {
  padding: 0 10rpx;
}

.contain scroll-view .item .list .rgt image {
  width: 74rpx;
  height: 74rpx;
}

.item-add-more {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #ddd;
}

.item-no-more {
  padding: 20rpx 0;
  text-align: center;
}
