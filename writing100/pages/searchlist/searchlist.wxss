/* searchlist.wxss */

.proLoad {
    width: 0;
    height: 0;
    overflow: hidden;
}

.list-top {
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: flex-start;
  align-content:flex-start;
  padding: 0 35rpx;
  width: 100%;
  height: 268rpx;
  background-color: #6dc4ff;
  z-index: 1;
}
.list-top view{
	width:200rpx;
	height:74rpx;
	line-height:74rpx;
	border:1px solid #fff;
	border-radius:40rpx;
	color:#fff;
	font-size:18px;
	text-align:center;
	margin-top:40rpx;
}
.list-top view.active{
	background:#fff;
	color:#6dc4ff;
}

.list-top-area {
    width: 100%;
    height: 268rpx;
}

.list-top .classification, .list-top .scan {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: center;
    height: 162rpx;
    padding: 30rpx 0 30rpx 0;
}

.list-top .classification image, .list-top .scan image {
    width: 52rpx;
    height: 53rpx;
}

.searchBox-show {
    height: 100%;
}

.searchBox-hidden {
    height: 100vh;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
}

.grade_listBox {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}

.mask {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
}

