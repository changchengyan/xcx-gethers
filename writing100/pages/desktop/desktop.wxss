/* pages/desktop/desktop.wxss */
@import "../template/template.wxss";

/*书桌样式  */

page {
  /* background: url(http://image.chubanyun.net/images/Dictation/word/bg.png); *//*background: url(http://imglf0.nosdn.127.net/img/TkRpUWhnbGQwcUpUa2JzYWZITVhXbXEyeU9DbXdQeDJna1dUVlJ5dlY5ZUN4eVdBYTFIRVZBPT0.png?imageView&thumbnail=1680x0&quality=96&stripmeta=0&type=jpg) no-repeat;*//* background-color: #217a7e; */
  background: #fff;
  background-attachment: fixed;
}

.container {
  display: block;
}

view {
  box-sizing: border-box;
}

.page-list {
  height: 100%;
  width: 100%;
  position: absolute;
}

.flex-body {
  display: flex;
  flex-direction: column;
}

.flex-body .book-scan {
  position: relative;
  font-size: 12pt;
  padding: 140px 0px 20px 0px;
  color: #777;
  text-align: center;
}

.flex-body .book-scan .text-view {
  padding: 15px 0px 10px 0px;
  color: #999;
  font-size: 12px;
}

.flex-body .scan-icon {
  width: 80px;
  height: 70px;
}

.flex-body .info-view {
  text-align: center;
}

.flex-body .scan-info {
  width: 197px;
  height: 210px;
}

.user-count-info {
  padding: 40rpx 0 40rpx 0;
  text-align: center;
  font-size: 12px;
  color: #999;
}

.flex-body .book-desk {
  background-color: #d9bef7;
  font-size: 12pt;
  padding: 30% 0px 30% 0px;
  color: #777;
  text-align: center;
}

.book-add-area {
  /*background: -webkit-linear-gradient(top, rgba(6, 193, 174, 1),rgba(6, 193, 174, 1));*/
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 162rpx;
  background-color: #6dc4ff;
  z-index: 2;
}

.book-add-area .book-count {
  color: #fff;
}

.f-book-count, .book-add-area .book-scan {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
  height: 162rpx;
  padding: 30rpx 0 30rpx 0;
}

.f-book-count image {
  width: 57rpx;
  height: 60rpx;
}

.book-scan image {
  width: 58rpx;
  height: 58rpx;
}

.book-add-area .book-scan .text {
  padding: 3px 0px 0px 0px;
  font-size: 12px;
  color: #777;
  line-height: 12px;
}

.book-add-area-visibility {
  height: 162rpx;
  text-align: center;
  padding: 20pt 0pt 0pt 0pt;
  color: #999;
}

.app_desc {
  text-align: center;
  line-height: 28px;
  font-weight: 600;
  color: #06c1ae;
}

/*书架为空的样式  */

.nobook_container {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 75rpx;
}

.add_book {
  margin-top: 140rpx;
  width: 227rpx;
  height: 91rpx;
  font-size: 18px;
  color: #fff;
  line-height: 91rpx;
  text-align: center;
  background: url(http://image.chubanyun.net/images/Dictation/desktop/add_green.png) 0 0 no-repeat;
  background-size: contain;
}

/**书籍列表**/

.book-list {
  padding: 12px 10px 10px 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  width: 100%;
  /* min-height: calc(100% - 40rpx); */
}

.bookWrap {
  min-height: calc(100% - 162rpx);
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  z-index: 1;
}

.book-list .item .item-delete {
  position: absolute;
  z-index: 5;
  width: 35px;
  height: 35px;
  margin-left: -10px;
  margin-top: -10px;
}

.book-list .item .item-delete image {
  width: 30px;
  height: 30px;
}

.book-list .item {
  width: 33.33%;
  text-align: center;
  padding: 10px;
  position:relative;
}

.book-list .item-content {
  position: relative;
  box-shadow: 0 0 5px 2px #eee;
  background-color: #fff;
}

.book-list .item .item-content .icon-view {
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.book-list .item .item-content .buyed {
  position: absolute;
  top: 5px;
  left: 0;
  width: 100%;
}

.book-list .item .item-content .icon {
  width: 100%;
  height: 120px;
}

.book-list .item .text-view {
  font-size: 12px;
  line-height: 15px;
  padding: 10px 0px 0px 0px;
  color: #777;
}

.book-img {
  background-size: 100% auto;
}

/**是否确认删除**/

.to-sure-del-btn {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  z-index: 100;
}

.to-sure-del {
  width: 240px;
  margin-top: -150rpx;
  background: #fff;
}

.to-sure-word {
  height: 70px;
  border: 1px solid #ddd;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  border-bottom: 0;
  font-size: 16px;
  color: #333;
  line-height: 70px;
}

.to-choose-sure {
  width: 100%;
  display: flex-box;
  flex-direction: row;
  border: 1px solid #ddd;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}

.to-choose-sure .choose-button {
  display: inline-flex;
  width: 50%;
  padding: 10px 0;
  flex-direction: row;
  justify-content: center;
}

.to-choose-sure .choose-button:nth-of-type(1) {
  border-right: 1px solid #ddd;
}

.first_login {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  z-index: 15;
}

.img_director {
  align-self: flex-end;
  margin: 14rpx 37rpx 24rpx 0;
  width: 350rpx;
  height: 376rpx;
}

.first_login text {
  align-self: center;
}

.iknow {
  display: flex;
  justify-content: center;
  align-items: center;
  align-self: center;
  width: 340rpx;
  height: 100rpx;
  margin-top: 228rpx;
  background-color: #3896ea;
  border-radius: 20rpx;
}

/* 底部留白 */

.copyright {
  display: block;
  padding: 10rpx 0;
  width: 100%;
  height: 40rpx;
  font-size: 12px;
  line-height: 40rpx;
  color: #bbb;
  text-align: center;
}

/*deviceId*/

.deviceId-down {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bindMask {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bindTips {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 600rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
}

.bindTips .text {
  box-sizing: border-box;
  height: 250rpx;
  padding-top: 60rpx;
  position: relative;
  z-index: 2;
  font-size: 16px;
  font-weight: bold;
  color: #000;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 24px;
}

.bindTips .text image {
  width: 601rpx;
  height: 250rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.bindTips .btn {
  display: flex;
  flex-direction: row;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  color: #000;
  font-size: 18px;
}

.bindTips .btn .unBind {
  width: 50%;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
}

.bindTips .btn .quxiao {
  width: 50%;
}

/* 没有书籍时提示 */

.nobook-swiper {
  width: 100%;
  height: 700rpx;
}
.nobook-swiper-item{
  display: flex;
  justify-content: center;
}
.swiper-img1 {
  width: 318rpx;
  height: 569rpx;
}

.swiper-img2 {
  width: 473rpx;
  height: 589rpx;
}
.grade{
	padding:0 35rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  
}
.grade view{
	width:200rpx;
	height:74rpx;
	line-height:74rpx;
	border:1px solid #6dc4ff;
