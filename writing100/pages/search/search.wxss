/* pages/search/search.wxss */

.main-container{
  height: 100vh;
}
.search-box{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  background-color: #00548d;
}
.search{
  box-sizing: border-box;
  width: 580rpx;
  height: 58rpx;
  margin-right: 25rpx;
  padding: 0 30rpx;
  border: 1rpx solid #fff;
  border-radius: 58rpx;
  background-color: #d2d2d2;
  color: #fff;
}
.search-button{
  position: static;
  width: 100rpx;
  height: 58rpx;
  line-height: 58rpx;
  margin: 0;
  padding: 0;
  text-align: center;
  color: #fff;
  background-color: transparent;
  border: none;
}
.search-button::after{
  display: none;
}
.words-container{
  box-sizing: border-box;
  height: 100rpx;
  padding: 0 25rpx;
  background-color: #00548d;
  white-space: nowrap;
  overflow: hidden;
}
.words{
  box-sizing: border-box;
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 60rpx;
  color: #fff;
  /* border: 2rpx solid #fff; */
}
.cur{
   background: url(http://image.chubanyun.net/images/writing/book/cur.png);
   background-size: contain;
}
.img-container{
  position: relative;
  box-sizing: border-box;
  height: 130rpx;
  padding: 20rpx 53rpx; 
  white-space: nowrap;
}
.bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 93rpx;
  background: url(http://image.chubanyun.net/images/writing/book/mibg.png);
  background-size: contain;
   z-index: 1; 
}
.word-img{
  position: relative;
  height: 93rpx;
  z-index: 2;
}
.canvas-container{
  position: relative;
  box-sizing: border-box;
  width: 300px;
  height: 300px;
  margin: 0 auto;
}
.play{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 18rpx;
  right: 20rpx;
  z-index: 1000;
}
.canvas-bg{
  position: absolute;
  top: 0;
  width: 300px;
  height: 300px;
}
.canvas{
  position: absolute;
  top: 0;
  width: 300px;
  height: 300px;
}
.bottom{
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 98rpx;
  width: 100%;
  padding: 0 100rpx;
  display: flex;
  justify-content: space-between;
  /* background: url(http://www.whtlkj.cn/write/image/bottom_bg.png)no-repeat; */
  background-size: cover;
}
.bottom-item{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin-top: 50rpx;
}
.bottom-item image{
  width: 62rpx;
  height: 62rpx;
  margin-bottom: 10rpx;
}
.bottom-title{
  position: fixed;
  bottom: 42rpx;
  right: 76rpx;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 90rpx;
  text-align: center;
  background-color: #00548d;
  color: #fff;
}
.bottom-count{
  position: fixed;
  bottom: 42rpx;
  left: 76rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}