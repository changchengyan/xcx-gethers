.news-wrap{
    
    height: 160rpx;
    box-shadow:0 0 40px #9ac8ef;
    margin: 0 0 20rpx 0;
    padding: 20rpx 65rpx 0 40rpx;
    
}
.news-title{
    color: #323232;
    font-size: 14px;
    margin-bottom: 20rpx;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.news-body{
    color: #999;
    font-size: 13px;
    height: 110rpx;
    line-height: 40rpx;
    overflow: hidden;
}
.news-time{
    color: #999;
    font-size: 11px;
}