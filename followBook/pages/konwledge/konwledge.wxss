/* pages/konwledge/konwledge.wxss */

/* 头部 */
.page{
  height: 100vh;
}
.head {
  width: 100%;
  height: 436rpx;
  background-color: #62d8b6;
  display: flex;
  flex-flow: nowrap column;
  align-items: center;
}

.head-pic {
  width: 180rpx;
  height: 240rpx;
  margin-top: 40rpx;
  border: 10rpx solid #fff;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

.book-info {
  display: flex;
  justify-content: space-between;
}

.book-type {
  font-size: 15px;
  color: #333;
  margin-right: 20rpx;
}

.listen-num {
  display: flex;
}
.listen-num view{
  font-size: 14px;
  color: #333;
}
.earphone {
  width: 43rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.source-item{
  position: relative;
  box-sizing: border-box;
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.source-item image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.source-info{
  display: flex;
  width: 500rpx;
  flex-flow: nowrap column;
}
.source-title{
  font-size: 16px;
  color: #333;
  font-weight: bold;
}
.source-content{
  font-size: 12px;
  color: #999;
  margin-top: 20rpx;
}
.enter{
  position: absolute;
  bottom: 30rpx;
  right: 60rpx;
  width: 98rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: #fff;
  font-size: 12px;
  border-radius: 34rpx;
  background: #999;
  text-align: center;
}