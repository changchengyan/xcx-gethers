.titleOfTips {
  width: 600rpx;
  height: 250rpx;
  position: relative;
  border-top-right-radius: 5rpx;
  border-top-left-radius: 5rpx;
}

.titleOfTips image.title-bg {
  width: 600rpx;
}

.titleOfTips .del {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
}

.titleOfTips .del image {
  width: 29rpx;
}

.tips {
  width: 100%;
  color: #f4c520;
  margin-top: 73rpx;
  margin-bottom: 82rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
}

.tips .color333 {
  font-size: 28rpx;
  color: #333;
}

.tips .timesSign {
  font-size: 44rpx;
  line-height: 44rpx;
}

.tips .key-num {
  font-size: 58rpx;
  line-height: 58rpx;
  display: inline-block;
  margin-left: 10rpx;
}

.tips image {
  margin: 0 20rpx;
  width: 61rpx;
}

.WX-onSecurity {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.WX-onSecurity image {
  display: inline-block;
  width: 192rpx;
}

.WX-share {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
}

.showBook {
  width: 200rpx;
  height: 258rpx;
  box-shadow: 0 0rpx 10rpx rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 128rpx;
  left: 50%;
  margin-left: -100rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.showBook image {
  display: block;
  width: 180rpx;
  height: 238rpx;
}

.showMoney {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #666;
  font-family: "微软雅黑";
  margin-top: 160rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.showMoney .showNumOfMoney {
  font-size: 60rpx;
  line-height: 50rpx;
  font-family: "微软雅黑";
  color: #06c1ae;
  padding: 0 10rpx;
}

.buy-give-tip {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  margin-top: 30rpx;
}

.bookName {
  width: 100%;
  position: absolute;
  top: 70rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: "微软雅黑";
  color: #fff;
  line-height: 24rpx;
}

.WX-share wx-button {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
}

