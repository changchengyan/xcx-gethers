/* template.wxss */

.bt {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  width: 320rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 24rpx 6rpx rgba(0, 0, 0, 0.2);
  background: linear-gradient(to right, #484848, #010101);
}

.bt_text {
  position: relative;
  width: 240rpx;
  text-align: center;
  color: #fff;
}

.bt_text > image {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 21rpx;
  height: 31rpx;
}

/*根据星星的数量来显示星星*/

.unit-star-3, .unit-star-2, .unit-star-1, .unit-star-0 {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx 0 10rpx;
  flex-grow: 0;
}

.unit-star-3 view {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/unit/start.png);
  background-size: cover;
}

.unit-star-2 view:nth-child(1), .unit-star-2 view:nth-child(2) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/unit/start.png);
  background-size: cover;
}

.unit-star-2 view:nth-child(3) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.unit-star-1 view:nth-child(1) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/unit/start.png);
  background-size: cover;
}

.unit-star-1 view:nth-child(2), .unit-star-1 view:nth-child(3) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.unit-star-0 view {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.maskBox {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 99;
}

.maskOfKey {
  position: fixed;
  top: 10%;
  left: 50%;
  width: 600rpx;
  height: 750rpx;
  margin-left: -300rpx;
  /* border: 1px solid #ccc; */
  background: #fff;
  border-radius: 5px;
  /* padding: 16rpx; */
  z-index: 100;
}

.maskOfKey .titleOfUnit {
  font: 16px/1.2 "微软雅黑";
  font-weight: 400;
}

.maskOfKey .key {
  text-align: center;
  margin-top: 20rpx;
}

.maskOfKey .key image {
  height: 152rpx;
  width: 144rpx;
}

.openThisUnitWithKey, .openAllBook {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

