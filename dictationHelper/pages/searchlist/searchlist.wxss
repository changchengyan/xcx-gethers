/* searchlist.wxss */

.proLoad {
  width: 0;
  height: 0;
  overflow: hidden;
}

.list-top {
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 30rpx;
  width: 100%;
  height: 162rpx;
  background-color: #06c1ae;
  z-index: 1;
}

.list-top-area {
  width: 100%;
  height: 162rpx;
}

.list-top .classification, .list-top .scan {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
  height: 162rpx;
  padding: 30rpx 0 30rpx 0;
}

.list-top .classification image, .list-top .scan image {
  width: 52rpx;
  height: 53rpx;
}

.searchBox-show {
  height: 100%;
}

.searchBox-hidden {
  height: 100vh;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

.grade_listBox {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}

/*年级列表样式  */

.not_show {
  display: none;
}

.grade_list {
  position: absolute;
  top: 200rpx;
  left: 75rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  /* margin: 200rpx auto 0 auto; */
  padding: 0 0 70rpx 0;
  width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  z-index: 5;
}

.title_bg {
  padding-top: 75rpx;
  width: 100%;
  height: 250rpx;
  text-align: center;
  background: url(http://image.chubanyun.net/images/Dictation/searchlist/title_bg.png) no-repeat;
  background-size: cover;
}

.title_bg text {
  color: #fff;
  font-size: 24px;
  line-height: 1;
}

.list {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  width: 480rpx;
}

.grade {
  width: 210rpx;
  height: 69rpx;
  margin-top: 40rpx;
  font-size: 15px;
  line-height: 69rpx;
  text-align: center;
  background: url(http://image.chubanyun.net/images/Dictation/searchlist/grade.png) 0 0 no-repeat;
  background-size: contain;
}

.grade:active {
  background: url(http://image.chubanyun.net/images/Dictation/searchlist/grade_checked.png) 0 0 no-repeat;
  background-size: contain;
}

.grade_checked {
  width: 210rpx;
  height: 69rpx;
  margin-top: 40rpx;
  font-size: 15px;
  line-height: 69rpx;
  text-align: center;
  background: url(http://image.chubanyun.net/images/Dictation/searchlist/grade_checked.png) 0 0 no-repeat;
  background-size: contain;
}

#grade7 {
  margin: 40rpx 135rpx 0 135rpx;
}

/*书籍列表  */

page {
  height: 100%;
}

view {
  box-sizing: border-box;
}

.page-list {
  height: 100%;
  width: 100%;
  position: relative;
  background-color: #f8f8f8;
}

.choose_grade {
  width: 140rpx;
  margin: 20rpx 30rpx 0 0;
  padding: 15rpx 0;
  color: #fff;
  text-align: center;
  background: #1fc784;
  border-radius: 12rpx;
}

.book-list {
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.book-list .item .item-delete {
  position: absolute;
  z-index: 1;
  width: 35px;
  height: 35px;
  margin-left: -10px;
  margin-top: -10px;
}

.book-list .item .item-delete image {
  width: 30px;
  height: 30px;
}

.book-list .item {
  width: 33.33%;
  text-align: center;
  padding: 10px;
}

.book-list .item-content {
  position: relative;
  box-shadow: 0 0 5px 2px #eee;
  background-color: #fff;
}

.book-list .item .item-content .icon-view {
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.book-list .item .item-content .icon {
  width: 100%;
  height: 120px;
}

.book-list .item .text-view {
  margin-top: 15rpx;
  font-size: 12px;
  line-height: 15px;
  color: #777;
}

.book-img {
  background-size: 100% auto;
}

.book_publish_brief {
  position: absolute;
  top: 20rpx;
  left: 5px;
  width: 100rpx;
  padding: 4rpx 0;
  text-align: center;
  border-bottom-right-radius: 19rpx;
  border-top-right-radius: 19rpx;
  background-color: rgba(246, 134, 51, 0.9);
}

.exiting {
  position: absolute;
  bottom: 0;
  padding: 10rpx 0;
  width: 100%;
  color: #fff;
  text-align: center;
  background-color: #06c1ae;
}

.grade_name {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-weight: bold;
}

.grade_name view:first-child {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}

.grade0 {
  background-color: #78c8e6;
}

.scanBookList {
  background-color: rgb(231, 40, 28);
}

.grade1 {
  background-color: #00cc0a;
}

.grade2 {
  background-color: #ffe349;
}

.grade3 {
  background-color: #ff895b;
}

.grade4 {
  background-color: #7c94be;
}

.grade5 {
  background-color: #f26797;
}

