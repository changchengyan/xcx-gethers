}

.flex-body {
  display: flex;
  flex-direction: column;
}

.flex-body .book-scan {
  position: relative;
  font-size: 12pt;
  padding: 140px 0px 20px 0px;
  color: #777;
  text-align: center;
}

.flex-body .book-scan .text-view {
  padding: 15px 0px 10px 0px;
  color: #999;
  font-size: 12px;
}

.flex-body .scan-icon {
  width: 80px;
  height: 70px;
}

.flex-body .info-view {
  text-align: center;
}

.flex-body .scan-info {
  width: 197px;
  height: 210px;
}

.user-count-info {
  padding: 40rpx 0 40rpx 0;
  text-align: center;
  font-size: 12px;
  color: #999;
}

.flex-body .book-desk {
  background-color: #d9bef7;
  font-size: 12pt;
  padding: 30% 0px 30% 0px;
  color: #777;
  text-align: center;
}

.book-add-area {
  /*background: -webkit-linear-gradient(top, rgba(6, 193, 174, 1),rgba(6, 193, 174, 1));*/
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 162rpx;
  background-color: #06c1ae;
  z-index: 2;
}

.book-add-area .book-count {
  color: #fff;
}

.f-book-count, .book-add-area .book-scan {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
  height: 162rpx;
  padding: 30rpx 0 30rpx 0;
}

.f-book-count image {
  width: 43rpx;
  height: 53rpx;
}

.book-scan image {
  width: 58rpx;
  height: 58rpx;
}

/*.book-count .text{
  font-size: 14px;
  line-height: 18px;
}*/

.book-add-area .book-scan .text {
  padding: 3px 0px 0px 0px;
  font-size: 12px;
  color: #777;
  line-height: 12px;
}

.book-add-area-visibility {
  height: 162rpx;
  text-align: center;
  padding: 20pt 0pt 0pt 0pt;
  color: #999;
}

