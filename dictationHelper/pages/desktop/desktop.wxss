/**是否确认删除**/

.to-sure-del-btn {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  z-index: 100;
}

.to-sure-del {
  width: 240px;
  margin-top: -150rpx;
  background: #fff;
}

.to-sure-word {
  height: 70px;
  border: 1px solid #ddd;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  border-bottom: 0;
  font-size: 16px;
  color: #333;
  line-height: 70px;
}

.to-choose-sure {
  width: 100%;
  display: flex-box;
  flex-direction: row;
  border: 1px solid #ddd;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}

.to-choose-sure .choose-button {
  display: inline-flex;
  width: 50%;
  padding: 10px 0;
  flex-direction: row;
  justify-content: center;
}

.to-choose-sure .choose-button:nth-of-type(1) {
  border-right: 1px solid #ddd;
}

.first_login {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  z-index: 15;
}

.img_director {
  align-self: flex-end;
  margin: 14rpx 37rpx 24rpx 0;
  width: 350rpx;
  height: 376rpx;
}

.first_login text {
  align-self: center;
}

.iknow {
  display: flex;
  justify-content: center;
  align-items: center;
  align-self: center;
  width: 340rpx;
  height: 100rpx;
  margin-top: 228rpx;
  background-color: #3896ea;
  border-radius: 20rpx;
}

