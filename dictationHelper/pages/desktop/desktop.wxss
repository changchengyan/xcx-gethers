/**书籍列表**/

.book-list {
  padding: 12px 10px 10px 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  width: 100%;
  /* min-height: calc(100% - 40rpx); */
}

.bookWrap {
  min-height: calc(100% - 162rpx);
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  z-index: 1;
}

.book-list .item .item-delete {
  position: absolute;
  z-index: 1;
  width: 35px;
  height: 35px;
  margin-left: -10px;
  margin-top: -10px;
}

.book-list .item .item-delete image {
  width: 30px;
  height: 30px;
}

.book-list .item {
  width: 33.33%;
  text-align: center;
  padding: 10px;
}

.book-list .item-content {
  box-shadow: 0 0 5px 2px #eee;
  background-color: #fff;
  position: relative;
}

.book-list .item .item-content .icon-view {
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.book-list .item .item-content .icon {
  width: 100%;
  height: 120px;
}

.book-list .item .text-view {
  font-size: 12px;
  line-height: 15px;
  padding: 10px 0px 0px 0px;
  color: #777;
}

.book-img {
  background-size: 100% auto;
}

.wave {
  width: 262rpx;
  height: 228rpx;
  position: absolute;
  /*	background:url(http://image.chubanyun.net/images/Dictation/desktop/wave.png) no-repeat;*/
  z-index: -1;
}

.wave1 {
  left: 350rpx;
  bottom: 260rpx;
  background-size: contain;
}

.wave2 {
  width: 131rpx;
  height: 114rpx;
  left: 0;
  bottom: 0;
  background-size: 200%;
  background-position: right top;
}

.wave3 {
  width: 131rpx;
  height: 228rpx;
  right: 0;
  bottom: 25rpx;
  background-size: 200%;
}

