  background-attachment: fixed; *//* background:url(http://image.chubanyun.net/images/Dictation/word/bg.png) repeat-y;
   *//* background: #217a7e;  */
}

.last {
  position: fixed;
  bottom: 30rpx;
}

.type_p {
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

.unit-bottom {
  width: 100%;
}

/*头部*/

.top-show {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  color: #333;
  padding-bottom: 10rpx;
  background-color: rgba(45, 97, 137, 0.7);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.publicKeyNum {
  font-size: 14px !important;
  padding: 8px 0;
  padding-right: 5px;
  flex: 1;
  color: #fff;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.publicKeyNum image {
  width: 31rpx;
  height: 38rpx;
}
.book-title {
  width: auto;
  padding: 8px 0;
  padding-left: 30rpx;
  flex-grow: 1;
  flex: 4;
  padding-right: 20rpx;
  color: #fff;
}
.top-botton-list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}
.top-button {
  width: 33%;
  height: 118rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.top-button image{
  width: 75rpx;
  height: 75rpx;
  margin-bottom: 10rpx;
}
.top-button button {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
}
.red-dot {
  position:absolute;
  right: 35%;
  top: 10rpx;
  width: 15rpx;
  height: 15rpx;
  background-color:#dd4545;
  border-radius: 50%
}
/*单元列表*/

.sortName {
  text-align: center;
  margin: 0 auto;
  margin-top: 60rpx;
  color: #fff;
  width: 327rpx;
  height: 75rpx;
  line-height: 75rpx;
  /* box-shadow: 6rpx 11rpx #52bd92; */
  background-color: rgba(33, 122, 126, 0.4);
  border: 2px solid #c5fbff;
  font-size: 18px;
  border-radius: 34rpx;
}
.book-content{
  margin-top: 180rpx;
}
.unit-list {
  display: flex;
  flex-flow: row wrap;
  padding: 0 0rpx 30rpx 0rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.unit-item {
  margin-top: 30rpx;
  margin-left: 0rpx;
  flex-wrap: wrap;
  font-size: 0;
  display: flex;
  width: 33%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.unit-discover {
  width: 190rpx;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: url(http://image.chubanyun.net/images/Dictation/unit/class_bg.png) no-repeat;
  background-size: contain;
  margin: 10rpx;
}

.unit-index {
  font-size: 30px;
  font-weight: bold;
  color: #fff;
}

.unit-list .unit-item .icon {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  position: absolute;
  z-index: -1;
}

.unit-list .unit-item .unit-name {
  margin-top: 20rpx;
  text-align: center;
  padding: 0 5rpx;
  max-height: 36px;
  overflow: hidden;
  color: #fff;
  /*word-break:break-all;*/
}

/*根据星星的数量来显示星星*/

.unit-star-3, .unit-star-2, .unit-star-1, .unit-star-0 {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx 0 10rpx;
  flex-grow: 0;
}

.unit-star-3 view {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/unit/start.png);
  background-size: cover;
}

.unit-star-2 view:nth-child(1), .unit-star-2 view:nth-child(2) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/unit/start.png);
  background-size: cover;
}

.unit-star-2 view:nth-child(3) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.unit-star-1 view:nth-child(1) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/unit/start.png);
  background-size: cover;
}

.unit-star-1 view:nth-child(2), .unit-star-1 view:nth-child(3) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.unit-star-0 view {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.mask {
  position: fixed;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

