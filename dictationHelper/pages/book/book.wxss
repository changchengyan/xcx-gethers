/* book.wxss */
@import "../template/template.wxss";

page {
  height: 100%;
}

view {
  box-sizing: border-box;
}

.background {
  min-height: 100%;
  padding-top: 34px;
  background: url(http://image.chubanyun.net/images/Dictation/book/bg_head.png) 0 0 no-repeat;
  background-size: 100% auto;
  background-color: #6cd7ac;
