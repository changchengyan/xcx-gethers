.info .container .current-wrap {
  box-sizing: border-box;
  text-align: center;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  /* padding-top: 64rpx;
