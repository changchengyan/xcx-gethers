}

.info .container .current-word-onlyLine {
  font-size: 120rpx;
  width: 100%;
  height: auto;
  color: #fff;
  display: inline-block;
  clear: both;
  max-height:100%;
  /* padding-top:140rpx; */
}
.current-word-onlyLine view {
  margin-top: 60rpx
}

.info .container .current-word-moreLine {
  font-size: 60rpx;
  font-weight: bold;
  width: 100%;
  height: 100%;
  color: #fff;
  display: inline-block;
  clear: both;
  text-align: left !important;
}

.info .container .current-time {
  display: inline-block;
  position: relative;
}

.info .container .current-time .time-label {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
}

.info .container .current-time text:first-child {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  position: absolute;
  transform: translate(-100%, -100%);
  color: #fff;
}

.info .container .current-time text:last-child {
  font-size: 60rpx;
  color: #fff;
}

.setting-bar {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  width: 100%;
  position: fixed;
  bottom: 320rpx;
  background: transparent;
}

.setting-bar view {
  flex-grow: 1;
  text-align: center;
}

.setting-bar view .icon {
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  display: block;
  margin: 0 auto;
}

.setting-bar view.gap .icon {
  font-weight: bold;
  color: rgb(15, 15, 15);
  font-size: 47rpx;
}

.setting-bar view text {
  color: rgb(65, 65, 65);
}

.controller {
