/* pages/book/book.wxss */
@import "/pages/template/temp_common/temp_common.wxss";
page {
  background-color: #f8f8f8;
  height: 100%;
}

.out {
  display: flex;
  align-items: center;
  height: 100%;
  position: relative;
}

.out .bg {
  width: 100%;
  padding: 0px 0px 0px 0px;
  position: relative;
  height: 100%;
  /* display: flex;
  flex-direction: column;
  justify-content: space-between; */
  box-sizing: border-box;
}
.noData{
  height: calc(100vh - 160rpx);
  font-size: 24rpx;
  color:#999; 
  text-align: center
}
.noData text{
  display: block;
  padding-top: 600rpx;
}
.no-book {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  color: #fff;
  width: 100%;
  height: 48rpx;
  text-align: center;
}

.left {
  width: 42rpx;
  height: 827rpx;
  position: absolute;
  background-color: #fff;
  left: 0;
  top: 75rpx;
}

.swiper {
  width: 100%;
  height: calc(100vh - 160rpx);
  margin: auto;
  position: relative;
  padding-top: 100rpx;
  box-sizing: border-box;
  /* margin: 0 auto;
  background-color: #fff;
  margin-top: 80rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  position: relative;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1); */
}

.blue-bg {
  position: absolute;
  width: 100%;
  height: 405rpx;
  background: url(http://image.chubanyun.net/images/Exam100/book_bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  top: 0;
}

.all {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 43rpx 50rpx 40rpx 50rpx;
  text-align: center;
  width: 542rpx;
  height: 730rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 auto;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.all_t {
  padding: 20rpx 0 0 0;
  margin-left: 30rpx;
  text-align: center;
  width: 542rpx;
  height: 730rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.new_add {
  font-size: 32rpx;
  color: #333;
}

.book_btn {
  position: absolute;
  width: 140rpx;
  height: 100%;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 0;
  z-index: 2;
  background-color: rgba(255, 255, 255, 0);
  border: none;
  padding: 0
}

.book_btn::after {
  content: none;
}

.book {
  width: 450rpx;
  height: 350rpx;
  margin: 0 auto;
  margin-top: 38rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.book .book-info-num {
  color: #666;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.book .book-info-num .num {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  line-height: 20rpx;
}

.book .finish {
  font-size: 28rpx;
  color: #666;
  align-items: center;
  line-height: 20rpx;
}

.book .book-info-num .title {
  font-size: 24rpx;
  color: #999;
  margin-top: 7rpx;
}

.little-book .delete {
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  top: -33rpx;
  right: -33rpx;
  padding: 20rpx;
  background-color: transparent;
  z-index: 2;
}

.book_img {
  position: relative;
  height: 100%;
}

.book_img .img {
  width: 240rpx;
  height: 100%;
}

.book-name {
  margin-top: 24rpx;
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}

.book-info {
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.pass-through {
  width: 300rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, rgba(39, 191, 255, 1) 0%, rgba(49, 155, 215, 1) 100%);
  margin: 0 auto;
}

.pass-through:active {
  transform: scale(0.8);
}

.my_book {
  font-size: 32rpx;
  color: #333;
}

.pk-review {
  width: 325rpx;
  margin: 53rpx auto 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.pk-review .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.PK {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/fuxi.png") no-repeat 50% 100%;
  background-size: 80%;
}

.PK:active {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/fuxi.png") no-repeat center 160%;
  background-size: 80%;
}

.review {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/pk_img.png") no-repeat center bottom;
  background-size: 80%;
}

.review:active {
  background: #d3dfe6 url("http://image.chubanyun.net/images/Word100/pk_img.png") no-repeat center 160%;
  background-size: 80%;
}

.bookshelf-add {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 30rpx;
  height: 530rpx;
  overflow-y: scroll;
  padding: 17rpx 0 0 45rpx;
}

.little-book {
  width: 140rpx;
  height: 380rpx;
  position: relative;
  margin-right: 25rpx;
}

.little-book .img {
  width: 140rpx;
  height: 205rpx;
}

.little-book-name {
  color: #333;
  font-size: 20rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; */
  text-align: left;
}

.bookshelf-text {
  font-size: 24rpx;
  color: #333;
  line-height: 48rpx;
  width: 100%;
  /* margin-left: -23rpx; */
  text-align: center;
  margin-top: 30rpx;
}

.add-book {
  width: 502rpx;
  height: 84rpx;
  margin: 30rpx auto;
  text-align: center;
  line-height: 84rpx;
  font-size: 30rpx;
  color: #91509d;
  border: 1px solid #91509d;
  border-radius: 8rpx;
  margin-top: 0;
  background:#fff;
}

.book .delete {
  width: 45rpx;
  height: 45rpx;
  padding: 20rpx;
  position: absolute;
  top: -32rpx;
  right: -32rpx;
  background-color: transparent;
  z-index: 2222222222;
  background-clip: content-box;
}

.add_book_two {
  width: 502rpx;
  height: 200rpx;
  background-color: #4ec98b;
  color: #fff;
  border-radius: 10rpx;
  line-height: 200rpx;
  font-size: 60rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -251rpx;
  margin-top: -100rpx;
}

wx-swiper wx-swiper-item {
  position: absolute !important;
  width: 610rpx !important;
  top: 0 !important;
  bottom: 0 !important;
  height: 850rpx !important;
  will-change: auto !important;
  margin: auto !important;
  margin-left: 72rpx !important;
}

.all, .all_t {
  transform: scaleY(0.9);
  transition: all .5s ease;
}

.swiper-active {
  transform: scaleY(1);
  transition: all .5s ease;
  /* animation: CC ease 2s */
}

