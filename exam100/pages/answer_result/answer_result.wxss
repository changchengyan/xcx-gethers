@import "/pages/template/temp_common/temp_common.wxss";
.wrap{
  width: 100%;
	position: relative;
  padding-bottom: 106rpx;
  overflow-x:hidden; 
}
.headerWrap{
  width: 100%;
	height: 480rpx;
  overflow-x:hidden; 
}
.header{
	position:absolute;
	left:-50%;
	top:0;
	background-image: linear-gradient(rgb(255,223,90) 0%,rgb(252,159,49) 100%);
	width: 200%;
	height: 480rpx;
	border-radius:0 0 50% 50%;  
}
.contain{
	width: 50%;
	height: 100%;
	margin:0 auto;
  padding-top: 12rpx;
  box-sizing: border-box;
}
.contain .count{
  height: 237rpx;
  position: relative;
}
.contain .count .count_num{
  font-size: 180rpx;
  color:#fff;
  text-align: center;
}
.contain .count .bg1{
  background-color: rgb(255, 255, 255);
  opacity: 0.4;
  position: absolute;
  left: 24rpx;
  top: 108rpx;
  width: 140rpx;
  height: 10rpx;
  z-index: 5;
  border-radius: 5rpx;
}
.contain .count .bg2 {
  background-color: rgb(255, 255, 255);
  opacity: 0.6;
  position: absolute;
  left: 94rpx;
  top: 125rpx;
  width: 140rpx;
  height: 10rpx;
  z-index: 4;
  border-radius: 5rpx;
}
.contain .count .bg3 {
  background-color: rgb(255, 255, 255);
  opacity: 0.4;
  position: absolute;
  right:24rpx;
  top: 108rpx;
  width: 140rpx;
  height: 10rpx;
  z-index: 3;
  border-radius: 5rpx;
}
.contain .count .bg4{
  background-color: rgb(255, 255, 255);
  opacity: 0.6;
  position: absolute;
  right: 94rpx;
  top: 125rpx;
  width: 140rpx;
  height: 10rpx;
  z-index: 2;
  border-radius: 5rpx;
}
.contain .examName{
  width:60%;
  margin:0 auto;
  text-align: center;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #fff;
  height: 76rpx;
}
.contain .detail{
  color:#fff;
  font-size: 32rpx;
  line-height: 24px;
  text-align: center;
  align-items: flex-start;
  margin-top: 35rpx;
}
.contain .detail .item{
  width: 211rpx;
  box-sizing: border-box;
}
.contain .detail .item1{
  border-right: 1px solid rgba(255, 255, 255,0.5);
}
.contain .detail .item3{
  border-left: 1px solid rgba(255, 255, 255,0.5);
}
.contain .detail .item .use{
  font-size: 24rpx;
}
.headerImg {
  background-color: #fff;
  position: absolute;
  left: 50%;
  bottom: -69rpx;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  margin-left: -66rpx;
  border:6rpx solid rgba(255, 255, 255,0.48);
  background-clip: content-box;
}
.headerImg image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
}
.cardBox{
  margin-top: 110rpx;  
}
.cardBox .cardTitle,.exam .examTitle{
  font-size: 28rpx;
  color:#333;
  justify-content: flex-start;
  padding:0 24rpx;

}
.cardBox .cardTitle .icon,.exam .examTitle .icon{
  width: 6rpx;
  height: 28rpx;
  background-color: rgb(145, 80, 157);
  opacity: 0.8;
  border-radius: 40rpx;
  margin-right: 10rpx;
}
.cardBox .cardTitle .des{
  font-size: 24rpx;
  color:#666;
}
.cardBox .cardTitle .des .rightNum{
  color:#0dc16a;
}
.cardBox .cardTitle .des .errorNum{
  color:#fe4648;
}
.cardBox .cardNumber{
  padding: 0 6rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-top: 30rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}
.cardBox .cardNumber view{
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-sizing: border-box;
  border-radius: 50%;
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-bottom: 28rpx;
}
.cardBox .cardNumber view.success{
  background:#edfcf5;
  border:1px solid #00cc66;
  color:#00cc66;
}
.cardBox .cardNumber view.error{
  background:#fef2f2;
  border:1px solid #fe4648;
  color:#fe4648;
}
.cardBox .more,.moreUp{
  font-size: 24rpx;

}
.cardBox .more image{
  width: 20rpx;
  height: 12rpx;
}
.cardBox .moreUp image{
  width: 20rpx;
  height: 12rpx;
  transform: rotate(180deg);
}
.analysis{
    position: fixed;
    width: 100%;
    height: 106rpx;
    bottom:0;
    background: #fff;
}
.analysis .item{
  width: 298rpx;
  height: 74rpx;
  line-height: 74rpx;
  background:#fcebff;
  border:1px solid #91509d;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
}
.analysis .item2{
  margin-left: 50rpx;
}