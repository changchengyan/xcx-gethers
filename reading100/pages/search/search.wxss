/* search.wxss */
/* 头部 */
page{
  background-color: #f8f8f8;
}
.header{
  width: 100%;
  height: 162rpx;
  background-color: #93d5e5; 
  overflow: hidden;
}
/* 搜索框  */
.search_box{
  display: flex;
  flex-flow: roe nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 70rpx;
  width: 100%;
  height: 68rpx;
}

.key_match{
  display: inline-block;
  margin-left: 40rpx;
  padding-left: 34rpx;
  width: 560rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background-color: #eee;
}
.key_match_placeholder{
  font-size: 15px;
  color: #333;
}

/*取消按钮  */
.cancle_btn{
  margin-left: 20rpx;
  font-size: 15px;
  color: #fff;
}

/*搜索结果列表  */
.candidating_list{
  margin: 0 40rpx;
  width: calc(100% - 80rpx);
  height: 94rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
  line-height: 94rpx;
}