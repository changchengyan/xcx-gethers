/* book.wxss */
@import "../template/template.wxss";

page {
  height: 100%;
}

view {
  box-sizing: border-box;
}

.background {
  height: 100%;
}

.last {
  position: fixed;
  bottom: 30rpx;
}

.type_p {
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

.unit-bottom {
  width: 100%;
}

/*头部*/

.top-block {
  width: 100%;
  height: 400rpx;
}

.top-up {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  left: 0;
  top: 280rpx;
  color: #333;
  padding-bottom: 10rpx;
  /* height:196rpx; */
  opacity: 1;
  overflow: hidden;
  transition: all 0.5s;
  z-index: 1000;
}

.top-down {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  color: #333;
  padding-bottom: 0;
  opacity: 0;
  height: 0;
  overflow: hidden;
  transition: all 0.2s;
  z-index: 1000;
}

.title {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 280rpx;
  padding: 30rpx 70rpx;
  padding-left: 30rpx;
  position: fixed;
  left: 0;
  top: 0;
  color: #333;
  background-color: #93d5e5;
  border-bottom: 1px solid #eee;
  z-index: 1001;
}
.title-img{
  width: 220rpx;
  height: 220rpx;
  margin-right: 45rpx; 
}
.title-right{
  height: 220rpx;
  display: flex;
  flex-flow: nowrap column;
  justify-content: space-around;
}
.title-todetail{
  position: fixed;
  top: 120rpx;
  right: 60rpx;
  width: 21rpx;
  height: 39rpx;
}
.title-name-big{
  font-weight: bold;
}
.title-name{

}
.title-num{
  display: flex;
  justify-content: space-between;
}

.title-bottom {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0 3px 3px #ddd;
}

.title-item {
  display: flex;
  flex: 1;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.title-bottom :nth-of-type(3) {
  position: relative;
}

.title-item image {
  width: 50rpx;
  height: 50rpx;
}

.title-item text {
  display: block;
  font-size: 12px;
  color: #333;
  margin-top: 10rpx;
}

.title-item button {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
}

.publicKeyNum {
  font-size: 14px !important;
  height: 32rpx;
  padding-right: 5px;
  color: #333;
  display: flex;
}

.publicKeyNum view {
  height: 32rpx;
  line-height: 32rpx;
  font-size: 14px;
}

.card {
  width: 43rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.book-title {
  /* width: auto; */
  padding: 8px 0;
  padding-left: 30rpx;
  flex-grow: 1;
  flex: 4;
  padding-right: 20rpx;
  color: #333;
}

.book-title-buy {
  width: auto;
  padding: 8px 0;
  padding-left: 30rpx;
  flex-grow: 1;
  flex: 4;
  padding-right: 20rpx;
  color: #00548d;
}

/*单元列表*/

.sortName {
  text-align: center;
  margin: 0 auto;
  margin-top: 60rpx;
  color: #fff;
  width: 327rpx;
  height: 75rpx;
  line-height: 75rpx;
  /* box-shadow: 6rpx 11rpx #52bd92; */
  background-color: rgba(33, 122, 126, 0.4);
  border: 2px solid #c5fbff;
  font-size: 18px;
  border-radius: 34rpx;
}

.unit-list {
  display: flex;
  flex-flow: row wrap;
  padding: 0 0rpx 30rpx 0rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.unit-item {
  box-sizing: border-box;
  height: 94rpx;
  width: 100%;
  display: flex;
}

.list-item-index {
  width: 100rpx;
  height: 94rpx;
  line-height: 92rpx;
  text-align: center;
  font-size: 15px;
  color: #999;
}

.unit-discover {
  width: 190rpx;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: url(https://www.whtlkj.cn/read/images/book/book.png) no-repeat center;
  background-size: contain;
  margin: 10rpx;
}

.unit-index {
  font-size: 30px;
  font-weight: bold;
  color: #fff;
}

.unit-list .unit-item .icon {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  position: absolute;
  z-index: -1;
}

.unit-list .unit-item .unit-name {
  box-sizing: border-box;
  width: 650rpx;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 2px solid #eee;
  font-size: 15px;
  color: #333;
  font-weight: bold;
}

.bottomMore {
  position: relative;
}

.bottomMore image {
  display: block;
}

.bottomMore .no_more {
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.share-button {
  width: 144rpx;
  height: 144rpx;
}

.share-button button {
  width: 144rpx;
  height: 144rpx;
  opacity: 0;
  position: absolute;
}

.sub_close {
  position: absolute;
  right: 10rpx;
  top: 15rpx;
}

.sub_close image {
  width: 60rpx;
  height: 60rpx;
}
