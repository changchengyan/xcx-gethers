/* pages/hot/hot.wxss */

/* 内容区域 */
.content-swiper{
  width: 750rpx;
  height: 570rpx;
  position: fixed;
  bottom: 78rpx;
  z-index: 2;
}
.content-item{
  width: 702rpx;
  height: 100%;
  margin: 0 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.bg-box{
  position: fixed;
  top: 0;
  z-index: 0;
  width: 100vw;
  height: 500rpx;
  opacity: 1;
  /* transition: all 1s; */
}
.color-box{
  position: fixed;
  bottom: 0;
  width: 100vw;
  height: 650rpx;
  z-index: 1;
  /* transition: all 0.5s; */
}
.bg-box-opacity{
  width: 100vw;
  height: 100vh;
  position: fixed;
  bottom: 0;
  z-index: 1;
  opacity: 0;
  /* transition: all 1s; */
}
.title{
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #333;
}
.huiben{
  box-sizing: border-box;
  width: 702rpx;
  padding: 0 34rpx;
  display: flex;
  justify-content: space-around;
}
.huiben-item{
  width: 200rpx;
}
.huiben-item image{
  width: 100%;
  height: 200rpx;
}
.book-title{
  box-sizing: border-box;
  width: 200rpx;
  padding: 0 0 0 10rpx;
  margin-top: 10rpx;
  font-size: 13px;
  color: #333;
}
.book-info{
  box-sizing: border-box;
  width: 200rpx;
  padding: 0 0 0 10rpx;
  font-size: 12px;
  color: #666;
}