/* pages/videolist/videolist.wxss */
.video-container{
  box-sizing: border-box;
  width: 100%;
  padding: 0 24rpx;
  display: flex;
  flex-flow: row wrap;
}
.video-item{
  width: 200rpx;
  margin-right: 50rpx;
  margin-top: 50rpx;
}
.video-item:nth-child(3n){
  margin-right: 0;
}
.video-item image{
  width: 200rpx;
  height: 200rpx;
}
.video-text{
  margin-top: 10rpx;
  box-sizing: border-box;
  font-size: 13px;
  color: #333;
  padding-left: 8rpx;
}