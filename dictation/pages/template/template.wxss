/* template.wxss */
.bt{
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  width: 320rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 24rpx 6rpx rgba(0, 0, 0, 0.2);
  background: linear-gradient(to right, #484848, #010101);
}

.bt_text{
  position: relative;
  width: 240rpx;
  text-align: center;
  color: #fff;

}
.bt_text > image{
  position: absolute;
  top: 0;
  right: 0;
  bottom:0;
  margin:auto;
  width: 21rpx;
  height: 31rpx;
}
/*根据星星的数量来显示星星*/
.unit-star-3,.unit-star-2,.unit-star-1,.unit-star-0{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx 0 10rpx;
  flex-grow: 0;
}
.unit-star-3 view{
  width: 38rpx;
  height: 38rpx;
  background: url(http://rayscloud.chubanyun.net/Content/images/Dictation/book/star_light.png);
  background-size: cover;
}
.unit-star-2 view:nth-child(1),.unit-star-2 view:nth-child(2){
  width: 38rpx;
  height: 38rpx;
  background: url(http://rayscloud.chubanyun.net/Content/images/Dictation/book/star_light.png);
  background-size: cover;
}
.unit-star-2 view:nth-child(3){
  width: 38rpx;
  height: 38rpx;
  background: url(http://rayscloud.chubanyun.net/Content/images/Dictation/book/star.png);
  background-size: cover;
}
.unit-star-1 view:nth-child(1){
  width: 38rpx;
  height: 38rpx;
  background: url(http://rayscloud.chubanyun.net/Content/images/Dictation/book/star_light.png);
  background-size: cover;
}
.unit-star-1 view:nth-child(2),.unit-star-1 view:nth-child(3){
  width: 38rpx;
  height: 38rpx;
  background: url(http://rayscloud.chubanyun.net/Content/images/Dictation/book/star.png);
  background-size: cover;
}
.unit-star-0 view{
  width: 38rpx;
  height: 38rpx;
  background: url(http://rayscloud.chubanyun.net/Content/images/Dictation/book/star.png);
  background-size: cover;
}



.maskOfKey{
  position: absolute;
  top:10%;
  left:50%;
  width: 600rpx;
  height:650rpx;
  margin-left:-300rpx;
  border: 1px solid #ccc;
  background: #eee;
  border-radius: 5px;
  padding: 50rpx;
  z-index: 100;
}
.maskOfKey .titleOfUnit{
  font:16px/1.2 "微软雅黑";
  font-weight: 400;
}
.maskOfKey .key{
  text-align: center;
  margin-top: 40rpx;
}
.maskOfKey .key image{
  height: 152rpx;
  width: 144rpx;
}
.openThisUnitWithKey ,.openAllBook{
  width: 100%;
  height: 80rpx;
  margin-top: 25px;
  background-color: rgb(6,193,174);
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
  color:#fff;
}
.delKey{
  display: flex;
  justify-content: flex-end;
}
.delKey image{
   width: 40rpx;   
}


.maskOfDetail{
  width: 100vw;
  height:100vh;
  background-color: rgba(0,0,0,0.7);
  z-index: 1001; 
  position: absolute;
  top:0;
  left:0; 
}
.maskOfDetail .modalOfDetail{
  width:500rpx;
  height:500rpx;
  position: absolute;
  left:50%;
  top:25%;
  margin-left: -250rpx;
}

.modalOfDetail .titleOfDetail{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  position: absolute;
  top:0%;
  left:50%;
  margin-left: -50rpx;
  background-color: #fff;
  text-align: center; 
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:flex-start;
  padding-top: 15rpx;
}
.modalOfDetail .titleOfDetail image{
   width: 40rpx; 
}
.modalOfDetail .bodyOfDetail{
  width: 100%;
  height:450rpx;
  margin-top: 50rpx;
  border-radius: 10px;
  background-color: #fff;  
  text-align: center;
  padding: 20rpx;
  position: relative;
}
.modalOfDetail .bodyOfDetail .bodyOfHeader image{
  width:30rpx;
}
.modalOfDetail .bodyOfDetail .bodyOfHeader text{
  margin-left: 20rpx;
  font-size: 16px;
  color: #ccc;
}

.immediatePay{
  position: absolute;
  bottom: 0;
  left:0;
  width:100%;
  height:100rpx;
  font-size: 16px;
  line-height: 100rpx;
  color:#fff;
  background-color: rgb(6,193,174);
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.money{
  font-size: 18px;
  line-height: 80rpx;
  color: rgb(6,193,174);
}
.bookName{
  font-size: 20px;
  line-height: 22px;
  color:#999;
}
.lessonName{
  font-size: 16px;
  line-height: 60rpx;
  color:#666;
  font-weight: 500;
}
.loadings{
  margin-top: 0rpx;
}
.resourceNum{
  font-size: 12px;
  color:#666;
  transform: scale(0.6);
}