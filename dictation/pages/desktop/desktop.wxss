}*/
.book-add-area .book-scan .text {
  padding: 3px 0px 0px 0px;
  font-size: 12px;
  color: #777;
  line-height: 12px;
}

.book-add-area-visibility {
  height: 50pt;
  text-align: center;
  padding: 20pt 0pt 0pt 0pt;
  color: #999;
}

/**书籍列表**/

.book-list {
  padding: 12px 10px 10px 10px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.book-list .item .item-delete {
  position: absolute;
  z-index: 1;
  width: 35px;
  height: 35px;
  margin-left: -10px;
  margin-top: -10px;
}

.book-list .item .item-delete image {
  width: 30px;
  height:30px;
}

.book-list .item {
  width: 33.33%;
  text-align: center;
  padding: 10px;
}

.book-list .item-content {
  box-shadow: 0 0 5px 2px #eee;
  background-color: #fff;
}

.book-list .item .item-content .icon-view {
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.book-list .item .item-content .icon {
  width: 100%;
  height: 120px;
}

.book-list .item .text-view {
  font-size: 12px;
  line-height: 15px;
  padding: 10px 0px 0px 0px;
  color: #777;
}

.book-img {
  background-size: 100% auto;
}

.bottom_block{
  width: 100%;
  height: 88rpx;
}

/**是否确认删除**/
.to-sure-del-btn{
  position: fixed;
