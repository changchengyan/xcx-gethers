/*书桌样式  */
.container{
  display: block;
}

view{
  box-sizing: border-box;
}
.page-list {
  height: 100%;
  width: 100%;
  position: absolute;
}

.flex-body {
  display: flex;
  flex-direction: column;
}

.flex-body .book-scan {
  font-size: 12pt;
  padding: 140px 0px 20px 0px;
  color: #777;
  text-align: center;
}

.flex-body .book-scan .text-view {
  padding: 15px 0px 10px 0px;
  color: #999;
  font-size: 12px;
}

.flex-body .scan-icon {
  width: 80px;
  height: 70px;
}

.flex-body .info-view {
  text-align: center;
}

.flex-body .scan-info {
  width: 197px;
  height: 210px;
}

.flex-body .book-desk {
  background-color: #d9bef7;
  font-size: 12pt;
  padding: 30% 0px 30% 0px;
  color: #777;
  text-align: center;
}

.book-add-area {
  height: 50pt;
  background-color: #f0f0f0;
  text-align: center;
  position: fixed;
  z-index: 2;
  top: 0px;
  left: 0px;
  width: 100%;
}

.book-add-area .book-count {
  float: left;
  color: #333;
}
.f-book-count{
    font-size: 30px ;
    padding: 13px 0px 10px 15px; 
}
.book-add-area .book-scan {
  float: right;
  padding: 11px 10px 5px 0px;
  text-align: center;
}

.book-add-area .book-scan .icon image {
  width: 25px;
  height: 25px;
}
/*.book-count .text{
  font-size: 14px;
