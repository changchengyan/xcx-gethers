.user-head .head-img{ width: 60px; margin: auto;}
.user-head .head-img image{width: 60px; height: 60px; border-radius: 60px;}
.user-head .head-nickname{ text-align: center; font-size: 14px;padding: 5px 0px 10px 0px; color: #fff;}
.user-head .head-login .button{ font-size: 14px; width: 120px; text-align: center; padding: 8px 0px 8px 0px; border-radius: 5px; background-color:#fe942d; color: #fff; margin: auto; }

.money-area{ display: flex; justify-content: center; text-align: center; padding: 20px 0px 20px 0px; }
.money-area .item{ flex-grow: 1; max-width: 33.33%; min-width: 33.33%;}
.money-area .item .number{ font-size: 16px; padding: 0px 0px 5px 0px; color: #fe942d;}
.money-area .item .text{ font-size: 12px; color: #777; font-weight: 300;}
.money-area .line{ border-right: 1px solid #eee;}


