/**综合分析*/
.twomenu{ display: flex; font-size: 14px; justify-content: center; padding: 25px 0px 10px 0px; color: #777;}
.twomenu .over{ background-color: #888; color: #fff;}
.twomenu .first{ border: 1px solid #888; border-radius: 8px 0px 0px 8px; border-right: 0;padding: 5px 12px 5px 15px;}
.twomenu .item{ border: 1px solid #888;border-right: 0;padding: 5px 12px 5px 12px;}
.twomenu .last{ border: 1px solid #888; border-radius: 0px 8px 8px 0px;padding: 5px 15px 5px 12px;}

.range-operation{ display: flex; font-size: 14px;line-height: 18px; align-items: center; padding: 0px 20px 0px 20px; }
.range-operation .app-name{ flex-grow: 1;}
.range-operation .app-null{ flex-grow: 10;}
.range-operation .app-order{flex-grow: 1; border-bottom: 1px solid #aaa; padding: 5px 0px 7px 7px;}
.range-operation .app-order .select-data{ font-size: 14px; line-height: 18px;}
.range-operation .app-order .icon-select-more{ width: 13px; height: 7px; margin-left: 2px;}
.range-operation .app-time{flex-grow: 1; border: 1px solid #ddd; padding: 5px 10px 5px 10px; border-radius: 10px; text-align: center;
margin-left: 10px;
}
.range-operation .app-time-over{ flex-grow: 1; border: 1px solid #fe942d; padding: 5px 10px 5px 10px; border-radius: 10px; text-align: center;
margin-left: 10px; color: #fe942d;}

.browser-report{ padding: 10px 10px 10px 10px;}
.browser-report image{ width: 100%;}


.table-list{ font-size: 14px; padding: 0px 20px 20px 20px; margin-top: 10px;}
.table-list .first{ background-color: #eee; border-top: 1px solid #ddd;}
.table-list .row{ display: flex; align-items: center; padding: 10px 0px 10px 0px; border: 1px solid #eee; border-top: 0;}
.table-list .b0{ background-color: #ffffff;}
.table-list .b1{ background-color: #f8f8f8;}
.table-list .number{ flex-grow: 1; min-width: 50px; max-width: 50px; text-align: center; color:  #777;}
.table-list .text{  flex-grow: 8;}
.table-list .count{flex-grow: 1;min-width: 70px; max-width: 70px; text-align: right; color: #fe942d; padding: 0px 10px 0px 0px;}


.user-data-img{ padding: 20px;}
.user-data-img image{ width: 100%;}