/* pages/evaluate/evaluate.wxss */
.body{ 
  width: 100%; height: 150px;
  padding: 0px 0px 0px 0px;
}
swiper{ width: 100%; height: 100%; background-color: #f8f8f8;}

swiper .item{height: 100%;}

swiper .item .img{ 
  height: 150px; background-size: cover; 
}
swiper .item .content{height: 150px; display: flex; flex-direction: column;padding: 15px 20px 20px 20px; background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.1),rgba(0, 0, 0, 0.7));  }
swiper .item .content .null{ flex-grow: 10;}
swiper .item .content .en{ flex-grow: 4; font-size: 20px; color: #fff;line-height: 26px; padding: 0px 0px 5px 0px;}
swiper .item .content .cn{ flex-grow: 4; font-size: 14px; color: #fff;}
swiper .item .content .source{ flex-grow: 2; font-size: 12px; color: #999; padding: 15px 0px 0px 0px;}




.grade-title{ text-align: center; font-size: 16px; padding: 10px 0px 0px 0px;}
.grade-desc{ font-size: 14px; color: #777; text-align: center; padding: 5px 0px 10px 0px;}
.grade-list{display: flex; flex-direction: row;flex-wrap:wrap; font-size: 14px; padding: 10px 10px 20px 10px; border-bottom: 5px solid #eee;}
.grade-item{ min-width: 33.33%; max-width: 33.33%; text-align: center; padding: 10px;} 
.grade-item view{ background-color: #666; color: #fff; padding: 5px;}


.hot-title{ text-align: center; font-size: 16px; padding: 10px 0px 0px 0px;}
.hot-desc{ font-size: 14px; color: #777; text-align: center; padding: 5px 0px 10px 0px; }

.evaluate-item-canvas{padding:0px 20px 0px 20px; }
.evaluate-item{ padding: 20px 0px 20px 0px; display: flex; flex-direction: row; border-top: 1px solid #eee;}
.evaluate-item .content{ padding: 0px 10px 0px 0px;}
.evaluate-item .content .text{ font-size: 16px; line-height: 21px;}
.evaluate-item .content .report{ font-size: 12px; color: #999; padding: 5px 0px 0px 0px;}
.evaluate-item .pic{ max-width: 30%; min-width: 30%;background-color: #666; color: #fff;flex-direction: column; justify-content: center; vertical-align: middle; align-items: center; display:flex; text-align: center;
 background-size: cover;
}
.evaluate-item .pic .score{ line-height: 16px; padding: 5px; font-size: 12px;background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.2),rgba(0, 0, 0, 0.5));  }
.evaluate-item .pic .score .number{ font-size: 18px; line-height: 20px;}

.bottom-view{ height: 50px;}
.bottom{
  bottom: 0px;left: 0px; position: fixed; z-index: 2;  
  width: 100%;height: 50px; background-color: #eee; border-top: 1px solid #e5e5e5;
  display: flex; flex-direction: row;
  justify-content: center; align-items: center;
  text-align: center; font-size: 12px;
}
.bottom view{ flex-grow: 1;}
.evaluateevaluate{ color: #06c1ae;}
.evaluatebook{ color: #555;}
.evaluateuser{ color: #555;}

