/* pages/word/notice/notice.wxss */
.notice-list-canvas{ padding: 20px; background-color: #f0f2f2;}
.notice-item{padding: 15px; border: 1px solid #ddd; border-radius: 5px; background-color: #ffffff; margin-bottom: 20px;}
.notice-item .title{ font-size: 18px;padding: 0px 0px 5px 0px;}
.notice-item .pic image{ width: 100%;}
.notice-item .desc{ font-size: 14px; color: #555; padding: 0px 0px 10px 0px;}
.notice-item .datetime{font-size: 12px; color: #999; padding: 0px 0px 5px 0px;}
.notice-item .read{font-size: 14px; border-top: 1px solid #eee; padding: 5px 0px 5px 0px;}
.notice-item .read .arrow{ float: right; color: #999;}
.notice-item .read .arrow image{ width: 9px; height: 15px;vertical-align: middle;}