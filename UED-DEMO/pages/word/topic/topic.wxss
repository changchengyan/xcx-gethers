/* pages/word/topic/topic.wxss */
.topic-canvas
{
  padding: 20px;
}
.topic-item
{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:center;
  border-bottom: 1px  solid #f0f0f0;
  padding: 15px 0px 15px 0px;
}
.topic-item .icon
{
  flex-grow: 2;
  max-width: 80px;
  min-width: 80px;
}
.topic-item .content
{
  flex-grow: 8;
}
.topic-item .content .title
{
  font-size: 16px;
  padding: 0px 0px 5px 0px;
}
.topic-item .content .desc
{
  font-size: 12px; color: #777;
}
.topic-item .report
{
    flex-grow: 8; font-size: 12px; color: #777; text-align: right;
}
.topic-item .arrow
{
   padding: 2px 5px 0px 15px; 
   max-width: 20px;   
   flex-grow:1;
   text-align: right;
}
.topic-item .arrow image
{
    width: 9px; height: 15px;
}
