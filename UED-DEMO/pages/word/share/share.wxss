/* pages/word/share/share.wxss */
.share-area{ background-color: #f8f8f8; position: absolute; z-index: 1; width: 100%; height: 100%; padding: 20px;}
.share-canvas{ border: 1px solid #eee; background-color: #fff; border-radius: 3px;}
.word_name{ font-size: 20px; text-align: center; padding: 20px 20px 5px 20px;}
.word_desc{ font-size: 12px;  text-align: center;color: #777;padding: 5px 20px 20px 20px; }
.ticket{ padding: 20px; text-align: center; border-top: 1px dashed #eee;border-bottom: 1px  dashed #eee;}
.ticket image{ width: 80%;}
.copyright{ padding: 20px 20px 20px 20px;}
.copyright .logo{ font-size: 26px; color: #777; text-align: center; padding: 10px 0px 10px 0px;}
.copyright .text{ font-size: 14px; color: #777;text-align: center;letter-spacing:10px;}