page {
  width: 100%;
  height: 100%; 
}
.template-black-mask {
  position: fixed;
  top: 0;
  left:0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 1000;
}
.template-semicircle {
  position: absolute;
  top: -70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:flex-start;
  padding-top: 22rpx;
  width: 137rpx;
  height: 137rpx;
  border-radius: 50%;
  background: #fff;
}
.template-semicircle image {
  width: 40rpx;
}
.template-pay-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  left: 0;
  right: 0;
  top:50%;
  margin: -150px auto 0;
  z-index: 10000;
}
.template-pay-box .info-box {
  display: flex;
  width: 70%;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 30rpx;
  background: #fff;
  overflow: hidden
}
.template-pay-box .to-close {
  width: 100%;
  padding: 25rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
}
.pay-info-form {

  width: 100%;
}
.pay-info-item {
   display: flex;
   flex-direction: row;
  width: 100%;
  padding-left: 20rpx;
  font-size: 32rpx;
  justify-content: flex-start;
  align-items: center;
}
.pay-info-title {
  margin: 10rpx 20rpx 0 0;
}
.to-close-box {
  width: 30rpx;
}
.to-close-box  image {
  width: 100%;
}
.info-box .money {
  font-size: 50rpx;
  padding-bottom: 30rpx;
  color: #06c1ae;
}
.info-box .name {
  font-size: 32rpx;
  color: #333;
}
.info-box .num {
  font-size: 20rpx;
  color: #999;
}
.to-pay-button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;  
  height: 90rpx;
  margin-top: 40rpx;
  background-color: #06c1ae;
  color: #fff;
  font-size: 36rpx;
  border-radius: 0;
}