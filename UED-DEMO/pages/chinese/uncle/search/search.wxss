/* pages/chinese/uncle/search/search.wxss */
.search-area{ padding: 20px 20px 30px 20px;}
.search{display: flex; flex-direction: row; align-content: center; justify-content: center; border-bottom: 1px solid #eee; padding: 0px 0px 5px 0px;}
.search .input{ flex-grow: 8; }
.search .input input{ font-size: 30px; height: 35px; text-align: center; padding: 0px 0px 0px 40px;}
.search .clear{ flex-grow: 2; max-width: 40px; min-width: 40px; text-align: center; padding: 0px 0px 0px 0px;}
.search .clear image{ width: 40px; height: 40px;}
.active_name{ padding: 20px 20px 20px 20px; text-align:center;  }
.active_name .text{ font-size: 14px;color: #f60;}


.info-title{ padding: 10px 0px 10px 0px; text-align: center; font-size: 13px; color: #00B6FA;}

.bishun{ padding: 10px 20px 10px 20px;}
.bishun .title{ font-size: 12px; color: #999; padding: 0px 0px 10px 0px; text-align: center;}
.bishun image{ width: 100%;}

.animation{ padding:10px 20px 10px 20px; text-align: center;}
.animation .pinyin{ text-align: center; padding: 0px 0px 10px 0px; font-size: 20px;}
.animation image{ width: 60%;}

.font-info{ font-size: 14px; color: #777; line-height: 21px; text-align: center; padding: 0px 20px 30px 20px;}

.font{ padding:10px 20px 30px 20px; text-align: center;}
.font image{ width: 80%;}
.font .font-name{ font-size: 12px; color: #999; padding: 0px 0px 10px 0px;}


.history-canvas{ text-align: center; padding: 10px 0px 50px 0px;}
.history-canvas image{ width: 90%;}


.app-canvas{ display: flex; flex-direction: row; align-content: center; justify-content: center;
  padding: 20px 20px 80px 20px;
}
.app-canvas .app{ flex-grow: 1; text-align: center;}
.app-canvas .app .icon{ width: 70px; height:70px; margin: auto; background-color: #f8f8f8; border-radius: 100%;}
.app-canvas .app .text{ font-size: 14px; color: #777; padding: 10px 0px 0px 0px;}
.app-canvas .app .icon image{ width: 70px; height:70px; border-radius: 100%;}




.bottom{ position:fixed; z-index: 1; left: 0px; bottom: 0px; width: 100%; display: flex; align-items: center; justify-content: center;}
.bottom .text{ background-color: #00B6FA; color: #fff; font-size: 14px; padding: 10px 20px 10px 20px; border-radius: 10px 10px 0px 0px;}

