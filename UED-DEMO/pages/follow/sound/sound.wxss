@-webkit-keyframes waves {
  10% {
    height: 20%;
  }

  20% {
    height: 60%;
  }

  40% {
    height: 40%;
  }

  50% {
    height: 100%;
  }

  100% {
    height: 50%;
  }
}

@keyframes waves {
  10% {
    height: 20%;
  }

  20% {
    height: 60%;
  }

  40% {
    height: 40%;
  }

  50% {
    height: 100%;
  }

  100% {
    height: 50%;
  }
}

