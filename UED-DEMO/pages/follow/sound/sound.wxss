/* 跳动的音符 */

#waves {
  width: 48rpx;
  height: 40rpx;
  margin-right:10rpx;
  display: flex;
  justify-content: space-between;
}
/* 28 */
#waves view {
  position: relative;
  float: left;
  height: 100%;
  width: 4rpx;
  overflow: hidden;
  /* margin-right: 5px; */
}

#waves view text {
  position: absolute;
  bottom: 0;
  display: block;
  height: 100%;
  width: 100px;
  background: #62d8b6;
}

#waves .li1 text {
  animation: waves 1s linear 0s infinite alternate;
  -webkit-animation: waves 1s linear 0s infinite alternate;
}

#waves .li2 text {
  animation: waves 1.3s linear 0s infinite alternate;
  -webkit-animation: waves 1.3s linear 0s infinite alternate;
}

#waves .li3 text {
  animation: waves 1.4s linear 0s infinite alternate;
  -webkit-animation: waves 1.4s linear 0s infinite alternate;
}

#waves .li4 text {
  animation: waves 1.2s linear 0s infinite alternate;
  -webkit-animation: waves 1.2s linear 0s infinite alternate;
}

  #waves .li5 text {
  animation: waves 1.1s linear 0s infinite alternate;
  -webkit-animation: waves 1.1s linear 0s infinite alternate;
} 

