}
 .operation-canvas .user-operation .operation-icon
{
  flex-grow: 1;
  max-width: 33.33%;
  min-width: 33.33%;
  text-align: center;
}

 .operation-canvas .admin-operation
{
  padding: 10px 0px 10px 0px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
 .operation-canvas .admin-operation .operation-icon
{
  flex-grow: 1;
