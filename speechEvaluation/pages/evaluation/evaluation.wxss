.word {
  font-size: 32rpx;
  margin-right: 10rpx;
}
.word-pay {
  width:100%;
  height: 80rpx;
  text-align: center;
  border: 4rpx dotted #66b3ff;
}
.word-pay text{
  font-size: 28rpx;
  width:100%;
  text-align: center;
  color: #66b3ff;
  height: 80rpx;
  line-height: 80rpx;
  -webkit-animation: breath 3s 0.1s infinite linear;
  animation: breath 3s 0.1s infinite linear;
}
@-webkit-keyframes breath{
  0%{
    -webkit-opacity: 1;
    opacity: 1;
  }
  50%{
    -webkit-opacity: 0;
    opacity:0;
  }
  100%{
    -webkit-opacity: 1;
    opacity: 1;
  }
}
@keyframes  breath{
  0%{
    -webkit-opacity: 1;
    opacity: 1;
  }
  50%{
    -webkit-opacity: 0;
    opacity:0;
  }
  100%{
    -webkit-opacity: 1;
    opacity: 1;
  }
}
