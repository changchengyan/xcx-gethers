/*日历  */

.calendar {
  margin-top: 20rpx;
  background-color: #fff;
}

.calendar .year {
  text-align: center;
  font-weight: bold;
  margin-bottom: 27rpx;
}

.calendar .week {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  font-size: 30rpx;
  color: #a8a8a8;
  margin-bottom: 30rpx;
  padding-right: 5rpx
}

.calendar .swipe_in {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.calendar .day .dragon {
  width: 107rpx;
  height: 45rpx;
  align-items: center;
  text-align: center;
}

.calendar .empty {
  font-size: 0;
}

.day_item {
  background-color: #f7f7f7;
  border-radius: 50%;
  width: 65rpx;
  height: 65rpx;
  margin: 0 auto;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #5e5e5e;
}

 .active {
  background-color: #fff;
  border: 1px solid #43c582;
  color: #43c582;
}

.box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

/*弹窗  */

.yessss .modal {
  position: fixed;
  width: 600rpx;
  height: 480rpx;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -240rpx;
  background-color: #fff;
  border-radius: 25rpx;
}

.yessss .modal .title {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background: linear-gradient(to right, #91e354, #2dc58f);
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
}

.yessss .modal .tishi {
  padding: 38rpx 32rpx 30rpx 32rpx;
  font-size: 31rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
}

.yessss .modal .tishi .yuan {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  width: 60%;
  margin: 0 auto;
  line-height: 54rpx;
  color: #d3d3d3;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.yessss .modal .tishi .yuan .one {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  background-color: #d0ec6f;
}

.yessss .modal .tishi .yuan .two {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  background-color: #86d656;
}

.yessss .modal .tishi .yuan .three {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  background-color: #43c582;
}

.yessss .modal .sure {
  width: 100%;
  text-align: center;
  line-height: 84rpx;
  color: #40c797;
}

