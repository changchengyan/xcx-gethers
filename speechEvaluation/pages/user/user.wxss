.top {
  width: 100%;
  height: 320rpx;
  background-color: #4ec98b;

}

.top .user {
  width: 100%;
  height: 200rpx;
  text-align: center;
}

.top image {
  margin-top: 36rpx;
  width: 128rpx;
  height: 128rpx;
